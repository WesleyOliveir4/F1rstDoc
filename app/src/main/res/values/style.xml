<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="editTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/text_view</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">45</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="editButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/button_login</item>
        <item name="android:color">@color/meio</item>
    </style>

    <style name="containerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:background">@drawable/container_components</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>



    // Splash

    <style name="editButtonEntrarStyleSplash">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/button_login</item>
        <item name="android:color">@color/meio</item>
    </style>

    <style name="editButtonCriarContaStyleSplash">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/button_register_login</item>
        <item name="android:color">@color/meio</item>
    </style>

    <style name="containerLoginComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/container_login_components</item>
        <item name="android:layout_marginTop">200dp</item>
    </style>

    <style name="containerRegisterComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/container_login_components</item>
        <item name="android:layout_marginTop">150dp</item>
    </style>


    <style name="BottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
    </style>

    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/delete_sheet</item>
    </style>


</resources>